@*Define Model*@
@model vladi.revolution.Models.Transfer

@*Define ViewData*@
@{
    ViewData["Title"] = "Adaugă Transfer - Vladi Revolution";
}

@*Write Code*@
<div class="d-flex justify-content-center text-center">
    <div class="row">
        <div class="col-md-12">
            &nbsp; <h1> Adaugă transfer </h1> &nbsp;
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PlayerId">Select Player</label>
                    <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.Players"></select>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="TransferDate" class="control-label"></label>
                    <input asp-for="TransferDate" type="date" class="form-control w-100" />
                    <span asp-validation-for="TransferDate" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="TransferFrom" class="control-label"></label>
                    <input asp-for="TransferFrom" class="form-control w-100" />
                    <span asp-validation-for="TransferFrom" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="TransferTo" class="control-label"></label>
                    <input asp-for="TransferTo" class="form-control w-100" />
                    <span asp-validation-for="TransferTo" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <input type="submit" value="Adaugă" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Înapoi la Transferuri</a>
                </div>
            </form>
        </div>
    </div>
</div>