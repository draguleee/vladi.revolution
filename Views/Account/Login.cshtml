@*Define Model*@
@using vladi.revolution.Data.ViewModels;
@model LoginVM;

@*Define ViewData*@
@{
    ViewData["Title"] = "Autentificare - Vladi Revolution";
}

@*Write Code*@
<div class="d-flex justify-content-center text-center">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger" style="width: 300px; height: 80px;">
                    <span><b>Ne pare rău</b> - @TempData["Error"]</span>
                </div>
            }
            &nbsp; <h1> Autentificare </h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center py-3">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group text-center py-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <a href="#" style="text-decoration:none; color:#474747"> Ți-ai uitat parola? </a>
                </div>
                <div class="form-group text-center px-3 py-5">
                    <input class="btn btn-outline-success float-right" type="submit" value="Autentificare" />
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Anulare</a>
                </div>
            </form>
        </div>
    </div>
</div>
