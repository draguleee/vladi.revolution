@*Define Model*@
@model vladi.revolution.Models.Staff

@*Define ViewData*@
@{
    ViewData["Title"] = "Adaugă Membru Staff - Vladi Revolution";
}

@*Write Code*@
<div class="d-flex justify-content-center text-center">
    <div class="row">
        <div class="col-md-12">
            &nbsp; <h1> Adaugă Membru Staff</h1>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" style="display:none;" />
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="ProfilePictureUrl" class="control-label"></label>
                    <input asp-for="ProfilePictureUrl" class="form-control w-100" />
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control w-100" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="Function" class="control-label"></label>
                    <input asp-for="Function" class="form-control w-100" />
                    <span asp-validation-for="Function" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <input type="submit" value="Adaugă" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Înapoi la Staff</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imageUrl = $('#ProfilePictureUrl').val();
            if (imageUrl) {
                output.src = imageUrl;
                output.style.display = "block";
            }
        });

        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            var newImageUrl = $(this).val();
            if (newImageUrl) {
                output.src = newImageUrl;
                output.style.display = "block";
            } else {
                output.style.display = "none";
            }
        });
    </script>
}