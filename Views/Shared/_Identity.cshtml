@inject UserManager<AppUser> UserManager;

<div class="d-flex justify-content-center align-items-center flex-wrap">
    @if(!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log In
    </a>
} 
else
{
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName;
    <div class="dropdown my-2 my-sm-0 mx-2">
        <button class="btn btn-primary dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="bi bi-person-badge"></i> Hello, @fullName!
        </button>
    </div>
        <form asp-controller="Account" asp-action="Logout" class="my-2 my-sm-0 mx-2">
        <button class="btn btn-outline-danger">
            <i class="bi bi-box-arrow-in-right"></i> Log Out
        </button>
    </form>
}
</div>