@*Define Model*@
@model Player

@*Define ViewData*@
@{
    ViewData["Title"] = "Editează Jucător - Vladi Revolution";
}

@*Write Code*@
<div class="d-flex justify-content-center text-center">
    <div class="row">
        <div class="col-md-12">
            &nbsp; <h1> Editează Jucător</h1>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="ProfilePictureUrl" class="control-label"></label>
                    <input asp-for="ProfilePictureUrl" class="form-control w-100" style="padding: 10px; font-size: 1.1em;" />
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control w-100" style="padding: 10px; font-size: 1.1em;" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" type="date" class="form-control w-100" style="padding: 10px; font-size: 1.1em;" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <select asp-for="Position" class="form-control w-100" asp-items="@(new MultiSelectList(ViewBag.Positions, "Value", "Text"))" multiple="multiple"></select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <label asp-for="ShirtNumber" class="control-label"></label>
                    <input asp-for="ShirtNumber" class="form-control w-100" style="padding: 10px; font-size: 1.1em;" />
                    <span asp-validation-for="ShirtNumber" class="text-danger"></span>
                </div>
                &nbsp;
                <div class="form-group">
                    <input type="submit" value="Actualizează" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Înapoi la Jucători</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ProfilPictureUrl').val();
        })
        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}