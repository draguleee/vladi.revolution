@using vladi.revolution.Data.ViewModels
@model IEnumerable<Player>

@{
    ViewData["Title"] = "Jucători - Vladi Revolution";
    var currentSortOrder = ViewData["CurrentSortOrder"]?.ToString();
}

<div class="d-flex justify-content-center text-center">
    <div class="row">
        &nbsp; <h1 class="text-center">Jucători</h1> &nbsp;
        <div class="d-flex justify-content-center">
            <div class="d-flex justify-content-center flex-wrap">
                <!-- Search Form -->
                <div class="col-12 col-md-12 mb-2 mb-md-0 d-flex">
                    <form method="get" class="form-inline d-flex w-100" asp-controller="Players" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control" placeholder="Caută jucător..." style="width: 100%; padding: 5px;" />
                        <button class="btn btn-outline-success ms-2" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
                <!-- Sorting Dropdown -->
                <div class="col-12 col-md-2 d-flex justify-content-md-start justify-content-center" style="margin:5px;">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle w-100 w-md-auto" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <!-- Icon based on sort order -->
                            @if (currentSortOrder == "asc")
                            {
                                <i class="bi bi-sort-alpha-down"></i>
                            }
                            else if (currentSortOrder == "desc")
                            {
                                <i class="bi bi-sort-alpha-up-alt"></i>
                            }
                            else
                            {
                                <i class="bi bi-funnel"></i>
                            }
                        </button>
                        <ul class="dropdown-menu">
                            <li><a asp-action="Index" asp-route-sortOrder="asc" class="dropdown-item">Crescător (A-Z)</a></li>
                            <li><a asp-action="Index" asp-route-sortOrder="desc" class="dropdown-item">Descrescător (Z-A)</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
                    <a asp-controller="Players" asp-action="Create" class="btn btn-success btn-lg" style="margin-bottom: 50px;">
                        <i class="bi bi-plus-circle"></i> Adaugă Jucător
                    </a>
                </div>
            }
        </div>
        &nbsp;
        <table class="table table-responsive">
            <thead>
                <tr class="align-middle">
                    <th>@Html.DisplayNameFor(model => model.First().ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                    <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.First().BirthDate)</th>
                    <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.First().Position)</th>
                    <th class="d-none d-md-table-cell">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            <div class="position-relative">
                                <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                                    <img class="profile-picture rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width: 150px" />
                                </a>
                                <div class="badge-number">
                                    <i class="fa fa-tshirt t-shirt-icon"></i>
                                    <span class="shirt-number">@item.ShirtNumber</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                                @Html.DisplayFor(model => item.FullName)
                            </a>
                        </td>
                        <td class="d-none d-md-table-cell">@Html.DisplayFor(model => item.BirthDate)</td>
                        <td class="d-none d-md-table-cell">
                            @string.Join(", ", item.Position.Select(p => p.ToString()))
                        </td>
                        <td class="d-none d-md-table-cell">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="bi bi-eye"></i> Detalii</a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Editează</a>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-player-id="@item.Id" data-player-name="@item.FullName">
                                    <i class="bi bi-trash"></i> Șterge
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Șterge jucător</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Ești sigur că vrei să ștergi jucătorul <strong id="playerName"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Șterge</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var playerId = button.getAttribute('data-player-id');
            var playerName = button.getAttribute('data-player-name');
            var modalTitle = deleteModal.querySelector('.modal-title');
            var playerNameElement = deleteModal.querySelector('#playerName');
            var deleteForm = deleteModal.querySelector('#deleteForm');
            playerNameElement.textContent = playerName;
            deleteForm.action = '/Players/Delete/' + playerId;
        });
    </script>
}